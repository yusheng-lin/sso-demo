<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
      min-height: 100vh;
    }
    .card {
      border-radius: 15px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    }
    .user-info {
      background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
      color: white;
      border-radius: 10px;
      padding: 20px;
    }
    .role-badge {
      background: rgba(255,255,255,0.2);
      padding: 5px 15px;
      border-radius: 20px;
      margin: 2px;
      display: inline-block;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background: rgba(0,0,0,0.2);">
    <div class="container">
      <a class="navbar-brand" href="#">ðŸŽ§ <%= portal %></a>
      <div class="navbar-nav ms-auto">
        <span class="nav-item nav-link text-light">Welcome, <%= user.name %></span>
        <a class="nav-item nav-link" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card p-4">
          <h2 class="mb-4">ðŸ‘‹ Welcome to <%= portal %></h2>
          
          <div class="user-info mb-4">
            <h5>User Information</h5>
            <p class="mb-1"><strong>Username:</strong> <%= user.name %></p>
            <p class="mb-1"><strong>Email:</strong> <%= user.email || 'N/A' %></p>
            <p class="mb-2"><strong>Roles:</strong></p>
            <div>
              <% user.roles.forEach(role => { %>
                <span class="role-badge"><%= role %></span>
              <% }); %>
            </div>
          </div>

          <div class="alert alert-success">
            <h5>âœ… SSO Authentication Successful!</h5>
            <p class="mb-0">You have been authenticated via Keycloak Single Sign-On.</p>
          </div>

          <!-- API Query Section -->
          <div class="mt-4">
            <h5>ðŸ“Š API Data Query</h5>
            <p class="text-muted small">Query REST APIs using your Bearer access token</p>
            <div class="d-flex gap-2 flex-wrap mb-3">
              <button id="btn-customers" class="btn btn-success">Fetch Customers API</button>
              <button id="btn-profits" class="btn btn-primary">Fetch Profits API</button>
            </div>
            <div id="api-result" class="border rounded p-3 bg-light" style="display:none;">
              <h6 id="result-title"></h6>
              <div id="result-content"></div>
            </div>
            <div id="api-error" class="alert alert-danger mt-2" style="display:none;"></div>
          </div>

          <div class="mt-4">
            <h5>Quick Links</h5>
            <div class="d-flex gap-2 flex-wrap">
              <a href="http://localhost:3001/dashboard" class="btn btn-outline-primary">Admin Portal</a>
              <a href="http://localhost:3002/dashboard" class="btn btn-outline-success">CS Portal</a>
            </div>
            <small class="text-muted mt-2 d-block">
              Note: Access depends on your assigned roles
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // No access token exposed to browser!
    // All API calls go through server-side proxy using session cookies

    // Helper function to call API through server proxy
    async function callApi(url, resultTitle) {
      const resultDiv = document.getElementById('api-result');
      const errorDiv = document.getElementById('api-error');
      const titleEl = document.getElementById('result-title');
      const contentEl = document.getElementById('result-content');

      resultDiv.style.display = 'none';
      errorDiv.style.display = 'none';

      try {
        const response = await fetch(url, {
          credentials: 'include' // Include session cookies
        });

        const data = await response.json();
        
        if (!response.ok) {
          throw new Error(data.message || `HTTP ${response.status}: ${response.statusText}`);
        }

        titleEl.textContent = resultTitle;
        
        // Build table from data
        if (data.data && data.data.length > 0) {
          const headers = Object.keys(data.data[0]);
          let tableHtml = `<p class="text-muted small">Requested by: ${data.requestedBy}</p>`;
          tableHtml += '<table class="table table-sm table-striped"><thead><tr>';
          headers.forEach(h => tableHtml += `<th>${h}</th>`);
          tableHtml += '</tr></thead><tbody>';
          data.data.forEach(row => {
            tableHtml += '<tr>';
            headers.forEach(h => tableHtml += `<td>${row[h]}</td>`);
            tableHtml += '</tr>';
          });
          tableHtml += '</tbody></table>';
          contentEl.innerHTML = tableHtml;
        } else {
          contentEl.innerHTML = '<pre>' + JSON.stringify(data, null, 2) + '</pre>';
        }
        
        resultDiv.style.display = 'block';
      } catch (err) {
        errorDiv.textContent = `Error: ${err.message}`;
        errorDiv.style.display = 'block';
      }
    }

    // Button handlers - call API endpoints directly (session cookie is sent automatically)
    document.getElementById('btn-customers').addEventListener('click', () => {
      callApi('/api/customers', 'ðŸ‘¥ Customers Data');
    });

    document.getElementById('btn-profits').addEventListener('click', () => {
      callApi('/api/profits', 'ðŸ’° Profits Data');
    });
  </script>
</body>
</html>
